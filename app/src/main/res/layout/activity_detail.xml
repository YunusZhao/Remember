<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunus.remember.activity.home.DetailActivity">

    <include
        android:id="@+id/detail_toolBar"
        layout="@layout/main_toolbar" />

    <include layout="@layout/common_word" />

    <TextView
        android:id="@+id/detail_mean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="汉解" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="例句" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_sentence_English_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="英1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/detail_sentence_Chinese_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="汉1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/detail_sentence_English_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="英2"
                android:textSize="24sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/detail_sentence_Chinese_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="汉2"
                android:textSize="24sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/detail_sentence_English_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="英3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/detail_sentence_Chinese_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="汉3"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/detail_wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="认错了" />
    <Button
        android:id="@+id/detail_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="下一个" />
</LinearLayout>
