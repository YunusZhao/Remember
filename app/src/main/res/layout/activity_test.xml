<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunus.remember.activity.home.TestActivity">

    <include layout="@layout/main_toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/test_spell"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="linear"
                        android:textSize="30sp"
                        android:layout_marginLeft="10sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/test_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="/linier/"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/test_voice"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/delete"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/test_word_sentence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="例句"/>

            <TextView
                android:id="@+id/test_word_english_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="英解"/>

            <TextView
                android:id="@+id/test_word_chinese_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="汉解"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/test_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="详细信息"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
