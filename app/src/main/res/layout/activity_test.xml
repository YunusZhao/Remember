<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunus.remember.activity.home.TestActivity">

    <include layout="@layout/main_toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000000" />
            <include layout="@layout/common_word"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/test_word_sentence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="例句"/>

            <TextView
                android:id="@+id/test_word_english_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="英解"/>

            <TextView
                android:id="@+id/test_word_chinese_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="汉解"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/test_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="详细信息"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
